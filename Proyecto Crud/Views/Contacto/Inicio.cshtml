@model List<Proyecto_Crud.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pagina de inicio hecha :)</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de contacto</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success">Crear Nuevo</a>
                <hr />
                <div class="table table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Proyecto_Crud.Models.Contacto item in Model)
            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Apellidos</td>
                                    <td>@item.Telefono </td>
                                    <td>@item.Correo</td>
                                    <td></td>
                                </tr>
            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>